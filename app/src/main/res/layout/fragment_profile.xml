<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.example.firebase_.model.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            app:shapeAppearanceOverlay="@style/circle_imageview"
            android:src="@drawable/ic_avatar_24"
            imageUrl="@{user.image}"
            />
        <ImageView
            android:id="@+id/changeAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_change_avatar"
            app:layout_constraintBottom_toBottomOf="@id/imgAvatar"
            app:layout_constraintEnd_toEndOf="@id/imgAvatar"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/imgAvatar"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="22dp"/>
        <View
            android:id="@+id/strike1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/txt1"
            android:layout_marginTop="12dp"
            android:background="#F4F4F4"/>
        <FrameLayout
            android:id="@+id/frm1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/strike1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textSize="17sp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="22dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{user.name}"
                android:layout_gravity="center|right"
                tool:text="Nguyen Dinh Huy"
                android:textSize="17sp"
                android:layout_marginRight="22dp"
                android:paddingVertical="12dp"
                />
        </FrameLayout>
        <View
            android:id="@+id/strike2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/frm1"
            android:background="#F4F4F4"/>
        <FrameLayout
            android:id="@+id/frm2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/strike2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="17sp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="22dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{user.email}"
                android:layout_gravity="center|right"
                tool:text="huyn3811@gmail.com"
                android:textSize="17sp"
                android:layout_marginRight="22dp"
                android:paddingVertical="12dp"
                />
        </FrameLayout>
        <View
            android:id="@+id/strike3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/frm2"
            android:background="#F4F4F4"/>
        <TextView
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="22dp"
            android:text="Đăng xuất"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="91dp"
            android:background="@drawable/bgr_btn_logout"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="22dp"
            android:text="Đổi mật khẩu"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/bgr_button_change_password"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>